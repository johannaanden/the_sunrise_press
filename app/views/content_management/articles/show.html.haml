.signup_container
    .flex.flex-col.items-center.m-8.text-center
        %h1.mb-8= @article.title
        %p.w-64= image_tag @article.image if @article.image.attached? 
        %p.m-4= "Written by #{@article.user.name}"
        %p.mb-8= @article.content
        =link_to 'Publish article', content_management_article_path(@article, toggle_publish: true), method: :patch
        =link_to 'Set as premium article', content_management_article_path(@article, toggle_premium: true), method: :patch
        =link_to 'Edit article', edit_content_management_article_path
        =link_to 'Delete article', content_management_article_path(@article), method: :delete
