.new_article.new_article_container
    = form_with model: @article, url: content_management_articles_path do | form |
        = notice || alert
        %p
            = form.label :title
            %br/
            = form.text_field :title, {class: 'form'}
        %p
            = form.label :description
            %br/
            = form.text_field :description, {class: 'form'}
        %p
            = form.label :content
            %br/
            = form.text_area :content, cols: "30", rows: "10"
        %p
            = form.label :image
            %br/
            = form.file_field :image
        %p
            = form.label :category_id
            %br/
            .w-64.mx-auto= form.collection_select :category_id, @categories, :id, :name, {class: 'form'}
        %p
            .w-64.mx-auto= form.submit 'Save Article' , {class: 'form-button'}