%nav
    = link_to image_tag('logo.png', {id: 'logo'}), root_path

-if user_signed_in?
    .nav_button
        .bg-white.text-sm.py-2.px-4.rounded
            = link_to 'Become a subscriber', (new_subscriber_path(current_user) if user_is_a_member), {style: "text-decoration: none; color:inherit"}
    .nav_link_5= link_to 'Users', content_management_users_path if user_is_a_editor
    .nav_link_3= link_to 'New article', new_content_management_article_path unless user_is_a_member
    .nav_link_2= link_to 'Articles', content_management_articles_path if user_is_a_editor
    .nav_link_4{style: "text-decoration: none; color:inherit"}
        = link_to 'Logout', destroy_user_session_path, method: :delete
- else
    .nav_button
        .bg-white.text-sm.py-2.px-4.rounded
            = link_to 'Become a subscriber', (new_user_registration_path if user_is_a_visitor), {style: "text-decoration: none; color:inherit"}
    .nav_link_1{style: "text-decoration: none; color:inherit"}
        = link_to_unless_current "EN", locale: 'en'
    .nav_link_2{style: "text-decoration: none; color:inherit"}
        = link_to_unless_current "SV", locale: 'sv'
    .nav_link_3= link_to t('Register'), new_user_registration_path, {style: "text-decoration: none; color:inherit"}
    .nav_link_4= link_to t('Login'), new_user_session_path, {style: "text-decoration: none; color:inherit"}
%br
.text-white= notice || alert